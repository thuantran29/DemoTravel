<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    app:cardCornerRadius="2dp"
    android:layout_marginRight="18dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="3dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hinhAvatarFolder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_circle"
            android:contentDescription="Hình du lịch"
            android:scaleType="fitXY"
            android:src="@drawable/person" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/txName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_alignTop="@+id/hinhAvatarFolder"
            android:text="Name" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:background="@color/grey"
            android:layerType="software" />

        <TextView
            android:id="@+id/txTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_below="@+id/view"
            android:text="Thời gian" />

        <TextView
            android:id="@+id/txTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txName"
            android:layout_alignBottom="@+id/txName"
            android:layout_alignEnd="@+id/view"
            android:layout_alignRight="@+id/view"
            android:text="Title"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/txContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/hinhAvatarFolder"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:maxLines="3"
            android:text="Hello World"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/xemThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txContent"
            android:layout_alignRight="@+id/txContent"
            android:layout_below="@+id/txContent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Xem thêm >>"
            android:textColor="@color/icon_xanh_duong"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imgReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/xemThem"
            />

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imgReview"
            android:layout_marginTop="12dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_below="@+id/line"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout2">

            <ImageView
                android:tint="@color/grey"
                android:id="@+id/imageView11"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/heart"
                />
            <TextView
                android:textSize="10sp"
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:text="0"
                android:layout_marginLeft="14dp" />
            <ImageView
                android:tint="@color/grey"
                android:id="@+id/imgWriteComment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/create"
                android:layout_marginLeft="14dp"
                />
            <TextView
                android:textSize="10sp"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:text="0"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:tint="@color/grey"
                android:id="@+id/imageView13"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="14dp"
                app:srcCompat="@drawable/preview"
                android:layout_marginLeft="14dp" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:text="0"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:id="@+id/imagePopupBaiViet"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="6dp"
                android:text="0"
                android:layout_marginLeft="160dp"
                android:src="@drawable/popup"
                android:tint="@color/grey" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
