<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_circle"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp" />

    <TextView
        android:textColor="@color/icon_xanh_duong"
        android:id="@+id/tenNguoiCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageAvatar"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/imageAvatar"
        android:text="Name"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/imageAvatar" />

    <ImageView
        android:tint="@color/grey"
        android:id="@+id/imageView11"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/camera"
        android:layout_alignLeft="@+id/tenNguoiCmt" />

    <TextView
        android:textSize="10sp"
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:text="0"
        android:layout_alignLeft="@+id/tenNguoiCmt"
        android:layout_marginLeft="14dp" />
    <ImageView
        android:tint="@color/grey"
        android:id="@+id/imageView12"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/create"
        android:layout_marginLeft="24dp"
        android:layout_alignLeft="@+id/tenNguoiCmt" />
    <TextView
        android:textSize="10sp"
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_marginStart="38dp"
        android:layout_marginTop="6dp"
        android:text="0"
        android:layout_alignLeft="@+id/tenNguoiCmt"
        android:layout_marginLeft="38dp" />

    <ImageView
        android:tint="@color/grey"
        android:id="@+id/imageView13"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        app:srcCompat="@drawable/preview"
        android:layout_alignLeft="@+id/tenNguoiCmt"
        android:layout_marginLeft="48dp" />

    <TextView
        android:textSize="10sp"
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_marginStart="62dp"
        android:layout_marginTop="6dp"
        android:text="0"
        android:layout_alignLeft="@+id/tenNguoiCmt"
        android:layout_marginLeft="62dp" />
    <LinearLayout
        android:layout_alignStart="@+id/tenNguoiCmt"
        android:layout_below="@+id/tenNguoiCmt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/linearLayout"
        android:layout_alignLeft="@+id/tenNguoiCmt">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/star"
            android:tint="@color/icon_xanh_duong" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="@color/icon_xanh_duong" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="@color/icon_xanh_duong" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="@color/icon_xanh_duong" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="@color/icon_xanh_duong" />
    </LinearLayout>

    <TextView
        android:id="@+id/thoiGianCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginEnd="36dp"
        android:text="Time"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp" />

    <TextView
        android:id="@+id/vitriCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageAvatar"
        android:layout_below="@+id/thoiGianCmt"
        android:layout_marginTop="12dp"
        android:text="Vi trÃ­ cmt"
        android:textColor="@color/icon_xanh_duong"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/imageAvatar" />

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/commentCmt"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/vitriCmt"
        android:layout_below="@+id/vitriCmt"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/vitriCmt" />

    <Button
        android:layout_marginBottom="12dp"
        android:drawableLeft="@drawable/heart"
        android:background="@drawable/custom_button"
        android:id="@+id/buttonLike"
        android:paddingLeft="12dp"
        android:textColor="@color/icon_xanh_duong"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/textView16"
        android:layout_below="@+id/commentCmt"
        android:layout_marginTop="18dp"
        android:text="Like"
        android:layout_alignRight="@+id/textView16">

    </Button>
    <ImageView
        android:id="@+id/imageViewPopup"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/commentCmt"
        android:layout_marginRight="24dp"
        android:layout_alignParentEnd="true"
        android:tint="@color/grey"
        android:src="@drawable/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <View
        android:layout_marginTop="6dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
       android:layout_below="@+id/imageView10"
        android:background="@color/grey" />
</RelativeLayout>