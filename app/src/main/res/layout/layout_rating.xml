<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Review"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp" />

    <TextView
        android:textColor="@color/icon_xanh_duong"
        android:id="@+id/textView8"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:text="4.8"
        android:textSize="36sp"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/textView2" />

    <TextView
        android:layout_below="@+id/textView8"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wonderful!"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
    />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignLeft="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignLeft="@+id/textView11" />
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignLeft="@+id/textView12" />
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_alignLeft="@+id/textView14" />
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/imageView4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@android:drawable/btn_star"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/textView10" />
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/imageView5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@android:drawable/btn_star"
        android:layout_below="@+id/textView10"
        android:layout_toStartOf="@+id/progressBar2"
        android:layout_toLeftOf="@+id/progressBar2" />
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/imageView6"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@android:drawable/btn_star"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@android:drawable/btn_star"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6" />
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/imageView8"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@android:drawable/btn_star"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView7" />
    <ProgressBar
        android:progressTint="@color/icon_xanh_duong"
        android:progress="90"
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/imageView4" />
    <ProgressBar
        android:layout_marginTop="2dp"
        android:progressTint="@color/icon_xanh_duong"
        android:progress="50"
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2"
        android:layout_alignLeft="@+id/progressBar2" />
    <ProgressBar
        android:layout_marginBottom="3dp"
        android:progressTint="@color/icon_xanh_duong"
        android:progress="20"
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar3"
        android:layout_alignStart="@+id/progressBar3"
        android:layout_alignLeft="@+id/progressBar3" />
    <ProgressBar
        android:layout_marginBottom="3dp"
        android:progressTint="@color/icon_xanh_duong"
        android:progress="10"
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar4"
        android:layout_alignStart="@+id/progressBar4"
        android:layout_alignLeft="@+id/progressBar4" />

    <ProgressBar
        android:progressTint="@color/icon_xanh_duong"
        android:progress="2"
        android:id="@+id/progressBar6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar5"
        android:layout_alignStart="@+id/progressBar5"
        android:layout_alignLeft="@+id/progressBar5" />
</RelativeLayout>









